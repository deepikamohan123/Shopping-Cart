    rzp1.open();

        }

        function verifyPayment(payment,order){
            $.ajax({
                url:'/verify-payment',
                data:{
                    payment,
                    order
                },
                method:'post',
                success:(response)=>{
                    console.log(response)
                    if(response.status){
                        openPopup()
                        document.getElementById('cart-count').innerHTML=0
                    } else{
                        alert('Payment Failed')
                    }
                }
            })
        }
    

        
        
</script>