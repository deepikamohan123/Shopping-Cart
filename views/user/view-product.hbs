
    <section>
        <div class="container mt-5">
            <div class="row">
                {{#each products}}
                <div class="col-md-3 p-3">
                    <div class="card p-2" style="width: 15rem;height:28rem">
                        <img class="card-img-top"
                            src="/product-images/{{this._id}}.jpg"  style="height:22rem;width:13rem;"                       alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">{{this.name}}</h5>
                            <p class="card-text">Rs. {{this.price}}</p>
                            <p class="card-text">{{this.description}}</p>
                            <button onclick="addToCart('{{this._id}}')" class="btn btn-primary">Add to cart</button>
                        </div>
                    </div>
                </div>
                {{/each}}
                
            </div>
        </div>
    </section>

    