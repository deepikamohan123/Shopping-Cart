<section>
    <div class="container">
        <div class="row mt-4">
            <a class="btn btn-success ml-auto"href="/admin/add-admin">Add Admin</a>
        </div>
        <table class="table mt-4" id="product-table">
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Description</th>
                    <th scope="col">Image</th>
                    <th scope="col">Options</th>

                </tr>
            </thead>
            <tbody>
                {{#each admins}}
                <tr>
                    <th scope="row">1</th>
                    <td>{{this.name}}</td>
                    <td>{{this.email}}</td>
                    <td>{{this.description}}</td>
                    <td><img style="width: 50px; height:50px" src="/admin-images/{{this._id}}.jpg"></td>
                    <td><a class="btn btn-primary" href="/admin/edit-admin/{{this._id}}">Edit</a>
                    <a class="btn btn-danger" onclick="return confirm('Are you sure you want to delete {{this.name}} ?')" href="/admin/remove-admin/{{this._id}}" >Remove</a>
                    </td>
                </tr>
                {{/each}}

            </tbody>
        </table>
    </div>
</section>

<script>
    $(document).ready( function () {
    $('#product-table').DataTable();
} );
</script>