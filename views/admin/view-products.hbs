<section>
    <div class="container">
        <div class="row mt-4">
            <a class="btn btn-success ml-auto"href="/admin/add-product">Add Product</a>
        </div>
        <table class="table mt-4" id="product-table">
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Title</th>
                    <th scope="col">Category</th>
                    <th scope="col">Price</th>
                    <th scope="col">Description</th>
                    <th scope="col">Image</th>
                    <th scope="col">Options</th>

                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <th scope="row">1</th>
                    <td>{{this.name}}</td>
                    <td>{{this.category}}</td>
                    <td>{{this.price}}</td>
                    <td>{{this.description}}</td>
                    <td><img style="width: 50px; height:50px" src="/product-images/{{this._id}}.jpg"></td>
                    <td><a class="btn btn-primary" href="/admin/edit-product/{{this._id}}">Edit</a>
                    <a class="btn btn-danger" onclick="return confirm('Are you sure you want to delete {{this.name}} ?')" href="/admin/delete-product/{{this._id}}" >Delete</a>
                    </td>
                </tr>
                {{/each}}

            </tbody>
        </table>
    </div>
</section>

<script>
    $(document).ready( function () {
    $('#product-table').DataTable();
} );
</script>